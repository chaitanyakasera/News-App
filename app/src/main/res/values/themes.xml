<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.NewsApp" parent="android:Theme.Material.Light.NoActionBar" />

    <style name="SplashScreenTheme" parent="Theme.SplashScreen">
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowSplashScreenBackground" tools:targetApi="s">@color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <item name="windowSplashScreenAnimationDuration">2000</item>
        <item name="android:windowSplashScreenIconBackgroundColor" tools:targetApi="s">
            @color/cardview_shadow_start_color
        </item>
        <item name="android:windowSplashScreenBrandingImage" tools:targetApi="s">
            @drawable/ic_launcher_background
        </item>
        <item name="android:splashScreenTheme" tools:targetApi="s">@style/Theme.NewsApp</item>
    </style>

</resources>